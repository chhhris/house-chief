          <li><%= link_to 'Add a new property', new_property_path %></li>
          <li><a href="#">Section 2</a></li>
          <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
    </div>
  </div>
</footer>



