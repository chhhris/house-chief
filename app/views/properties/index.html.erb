<div class="row">
  <div class="large-12 columns">
    <div class="panel">
      <h1>Your properties</h1>
    </div>
  </div>
</div>

<div class="row">

  <div class="large-3 columns ">
    <div class="panel">
      <div class="section-container vertical-nav" data-section data-options="deep_linking: false; one_up: true">
        <section class="section">
          <h5 class="title"><%= link_to 'Add a new property', new_property_path %></h5>
        </section>
        <section class="section">
          <h5 class="title"><a href="#">Section 2</a></h5>
        </section>
        <section class="section">
          <h5 class="title"><a href="#">Section 3</a></h5>
        </section>
      </div>

    </div>
  </div>

  <div class="large-9 columns">

    <% @properties.each do |property| %>
      <div class="row">
        <div class="large-2 columns small-3"><img src="http://placehold.it/80x80&text=[img]"/></div>
        <div class="large-10 columns">

          <p><strong><%= property.name %></strong> <%= property.address %></p>
          <% if property.users.count > 1 %>
            <p>Members: <%= property.users.pluck(:name).join(", ") %></p>
          <% end %>
          <ul class="inline-list">
            <li><%= link_to 'Show', property %></li>
            <li><%= link_to 'Edit', edit_property_path(property) %></li>
          </ul>

        </div>
      </div>
      <hr/>
    <% end %>
  </div>
</div>

<footer class="row">
  <div class="large-12 columns">
    <hr/>
