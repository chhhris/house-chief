<div class="row">
  <div class="large-12 columns">
    <div class="panel">
      <h1><%= @property.name %></h1>
      <p><%= @property.address %></p>
    </div>
  </div>
</div>

<div class="row">


  <div class="large-3 columns ">
    <div class="panel">
      <div class="section-container vertical-nav" data-section data-options="deep_linking: false; one_up: true">
        <section class="section">
          <h5 class="title"><%= link_to 'Add an item', new_property_item_path(@property) %></h5>
        </section>
        <section class="section">
          <h5 class="title"><%= link_to 'Send an invite', new_property_user_path(@property) %></h5>
        </section>
        <section class="section">
          <h5 class="title"><%= link_to 'Edit this page', edit_property_path(@property) %></h5>
        </section>
      </div>

    </div>
  </div>



  <div class="large-9 columns">

    <% if @property.items.blank? %>
      <p>Create an item or a to-do.</p>
    <% else %>
      <% @property.items.each do |item| %>
        <div class="row">
          <div class="large-2 columns small-3"><img src="http://placehold.it/80x80&text=[img]"/></div>
          <div class="large-10 columns">
            <p><a href="<%= property_item_path(@property, item) %>"><strong><%= item.name %></strong></a></p>
            <p><%= item.notes %></p>
            <% if item.frequency? || item.last_maintenance_at? %>
              <ul class="inline-list">
                <% if item.frequency? %>
                  <li><strong>Maintenance Frequency:</strong> <%= item.frequency.titleize %></li>
                <% end %>
                <% if item.last_maintenance_at? %>
                  <li><strong>Last maintained:</strong> <%= item.last_maintenance_at.strftime('%B %Y') %></li>
                <% end %>
              </ul>
            <% end %>

            <% if item.attachments.present? %>
              <h6>Attachments</h6>
              <div class="row">
                <div class="large-2 columns small-3"><img src="http://placehold.it/50x50&text=[img]"/></div>
                <div class="large-10 columns"><p>Bacon ipsum dolor sit amet nulla ham qui sint exercitation eiusmod commodo, chuck duis velit. Aute in reprehenderit</p></div>
              </div>
            <% end %>

          </div>
        </div>
        <hr/>
      <% end %>
    <% end %>



  </div>

</div>

<footer class="row">
  <div class="large-12 columns">
    <hr/>
    <div class="row">
      <div class="large-5 columns">
        <p>Â© Copyright no one at all. Go to town.</p>
      </div>
      <div class="large-7 columns">
        <ul class="inline-list right">
          <li><%= link_to 'Add an item', new_property_item_path(@property) %></li>
          <li><%= link_to 'Edit this page', edit_property_path(@property) %></li>
        </ul>
      </div>
    </div>
  </div>
</footer>
