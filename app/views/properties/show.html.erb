<div class="row">
  <div class="panel header-panel">
    <div class="large-4 columns">
      <h1><%= @property.name %></h1><span class="subtitle"><%= @property.address %></span>
    </div>
    <div class="large-8 columns header-actions">
      <%= render partial: 'shared/menu' %>
    </div>
  </div>
</div>

<div class="row first-row listing-shadow">
  <div class="large-offset-1 large-10 columns end">
    <% if @items.blank? %>
      <p>Create an item or a to-do.</p>
    <% else %>
      <% @items.each do |item| %>
        <%= render partial: 'item', locals: {item: item} %>
      <% end %>
    <% end %>
  </div>

</div>

<footer class="row">
  <div class="large-12 columns">
    <hr/>
    <div class="row">
      <div class="large-5 columns">
        <p>Â© Copyright no one at all. Go to town.</p>
      </div>
      <div class="large-7 columns">
        <ul class="inline-list right">
          <li><%= link_to 'Add an item', new_property_item_path(@property) %></li>
          <li><%= link_to 'Edit this page', edit_property_path(@property) %></li>
        </ul>
      </div>
    </div>
  </div>
</footer>