<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="row">
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>
  </div>
  <div class="row">
    <div class="actions">
      <%= f.submit 'Send invite', class: 'button' %>
    </div>
  </div>
  <%= f.hidden_field :property_id, value: params[:property_id] %>
<% end %>
