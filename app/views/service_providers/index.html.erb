<div class="row">
  <div class="large-12 columns">
    <div class="panel">
      <h1><%= @property.name %></h1>
      <p><%= @property.address %></p>
    </div>
  </div>
</div>

<div class="row">


  <div class="large-3 columns ">
    <%= render partial: 'shared/menu' %>
  </div>

  <div class="large-9 columns">
    <% @property.service_providers.each do |service_provider| %>
      <div class="row">
        <div class="large-2 columns small-3"><img src="http://placehold.it/80x80&text=[img]"/></div>
          <div class="large-10 columns">
            <p><strong><%= service_provider.name %></strong></p>
            <% if service_provider.description.present? %>
              <p><%= service_provider.description %></p>
            <% end %>
            <% if service_provider.phone.present? %>
              <p><%= service_provider.phone %></p>
            <% end %>
            <% if service_provider.address.present? %>
              <p><%= service_provider.address %></p>
            <% end %>
          </div>
      </div>
      <hr/>
    <% end %>
  </div>

</div>

<footer class="row">
  <div class="large-12 columns">
    <hr/>
    <div class="row">
      <div class="large-5 columns">
        <p>Â© Copyright 2015 House Chief</p>
      </div>
      <div class="large-7 columns">
        <ul class="inline-list right">
          <li><%= link_to 'Add an item', new_property_item_path(@property) %></li>
          <li><%= link_to 'Property settings', edit_property_path(@property) %></li>
        </ul>
      </div>
    </div>
  </div>
</footer>
